#include <iostream>     // std::cout
#include <algorithm>    // std::transform
#include <vector>       // std::vector
#include <functional>
#include <cstring>
#include <cmath>
#include <math.h>
#include <iomanip>
#include <string.h>
using namespace std;
 
int main()
{
    unsigned int n;
    cin>>n;
    if(n == 0)
    {
        cout<<"1";
        return 0;
    }
    int res =n%4;
    if(res == 0)
        cout<<"6";
    else if(res == 1)
        cout<<"8";
    else if(res == 2)
        cout<<"4";
    else if(res == 3)
        cout<<"2";
    return 0;
 
}
