
#include <iostream>     // std::cout
#include <algorithm>    // std::transform
#include <vector>       // std::vector
#include <functional>
#include <cstring>
#include <cmath>
#include <math.h>
#include <iomanip>
#include <string.h>
 
using namespace std;
 
int main()
{
     int n,res=0;
     cin>>n;
     string s;
     for(int i=0;i<n;i++)
     {
         cin>>s;
         if(s[1] == '+')
            res++;
         else if(s[1] == '-')
            res--;
     }
     cout<<res;
    return 0;
}
